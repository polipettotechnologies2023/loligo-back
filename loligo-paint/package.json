{
  "name": "loligo-paint",
  "displayName": "Loligo Paint",
  "version": "0.0.2",
  "description": "A basic Plasmo extension.",
  "author": "Wesley G. Obi",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@atlaskit/button": "^17.2.0",
    "@atlaskit/icon": "^22.0.0",
    "@plasmohq/messaging": "^0.5.0",
    "@plasmohq/storage": "^1.9.1",
    "axios": "^1.6.7",
    "plasmo": "0.84.2",
    "react": "18.2.0",
    "react-color": "^2.19.3",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "commands": {
      "Screenshot": {
        "suggested_key": {
          "default": "Ctrl+Shift+L",
          "mac": "Command+Shift+P"
        },
        "description": "Take a screen shot and open a canvas"
      },
      "WhiteCanvas": {
        "suggested_key": {
          "default": "Ctrl+Shift+E",
          "mac": "Command+Shift+O"
        },
        "description": "Open a White Canvas"
      }
    },
    "permissions": [
      "activeTab",
      "tabs",
      "scripting",
      "storage",
      "windows"
    ]
  }
}
